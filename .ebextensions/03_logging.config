files:
  "/etc/rsyslog.d/webapp.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      if $programname == 'gunicorn' then /var/log/gunicorn/gunicorn.log
      & stop
      if $programname == 'web' then /var/log/web.stdout.log
      & stop

commands:
  01_make_log_dir:
    command: "mkdir -p /var/log/gunicorn && touch /var/log/gunicorn/gunicorn.log && chmod 666 /var/log/gunicorn/gunicorn.log"
